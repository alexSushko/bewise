@model List<SovaTranslate_001.Models.order>
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Orders</h2>
<table>
    <tr>
        <th></th>

        <th>Название</th>
        <th>Описание</th>
        <th>Статус</th>
   <th> Дата заполнение</th>
      <th>  Дедлайн</th>

    </tr>
    @foreach (var us in Model) { 
     
        <tr>
       <td>@*<a href="~/Account/ProfileUser/?id=@us.Id">Profile  </a></td>
            <td>@Html.ActionLink("AddApplication", "AddApplication", "Manager", new { userId = @us.Id })</td>
