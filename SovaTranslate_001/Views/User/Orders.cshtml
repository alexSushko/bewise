@model List<SovaTranslate_001.Models.order>
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Orders</h2>
    <table class="table">
        <tr>
        <th>Название</th>
        <th>Статус</th>
            <th></th>
            <th></th>
            </tr>
@foreach (var o in Model) { 
     string tr_class;
     if ((bool)o.isDone)
     {
         tr_class = "success";
     }
     else
     {
         if ((bool)o.inProgress)
         {
             tr_class = "info";
         }
         else
         {
             tr_class = "danger";
         }
     }
    <tr class=@tr_class>
     
    <td>o.name</td>
    
   @if((bool)o.isDone){
        <td>Done</td>
        }
else{
    if ((bool)o.inProgress) {
         <td>In Progress </td>
        }
             else{
      <td>Waiting</td>
    }
    }
        
        <td>
    <a href="http://localhost:59469/Application/View/?idOrder=@o.IdOrder" >Просмотреть</a> 
            </td>
        <td>
<a href="http://localhost:59469/Application/DeleteApp/?idApp=@o.IdOrder" ><i class="glyphicon glyphicon-trash"></i></a>    <br />
            </td>
        </tr>
}
        </table>
    