@model SovaTranslate_001.Models.registration

<h2>Регистрация</h2>
  <div class="form-center">
@using (Html.BeginForm("Registration", "Account", FormMethod.Post))
{
    <fieldset>
        <div class="form-group">
            <label class="control-label" for="email">
                Email
            </label>
            <div class="controls">
                @Html.ValidationMessageFor(r=>r.email)
                
                 @Html.TextBoxFor(r=>r.email, new { @class = "form-control",@placeholder="Введите емеил" })
                
            </div>
        </div>
        <div class="form-group">
            <label class="control-label" for="name">
                Name
            </label>
            <div class="controls">
                @Html.ValidationMessageFor(r=>r.name)
               
                 @Html.TextBoxFor(r=>r.name, new { @class = "form-control",@placeholder="Введите имя" })
                
            </div>
        </div>
        <div class="form-group">
            <label class="control-label" for="password">
                Password
            </label>
            <div class="controls">
                @Html.ValidationMessageFor(r=>r.password)
               
                 @Html.PasswordFor(r=>r.password, new { @class = "form-control",@placeholder="Введите пароль" })
                 
            </div>
        </div>

         <div class="form-group">
              <label class="control-label" for="ConfirmPassword">
                Confirm Password
            </label>
              <div class="controls">
                @Html.ValidationMessageFor(r=>r.ConfirmPassword)
                @Html.PasswordFor(r=>r.ConfirmPassword, new { @class = "form-control",@placeholder="Введите пароль повторно" })
                  </div>
            </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Зарегистрироватся
            </button>
            @Html.ActionLink("Отмена", "Index", "Home")
        </div>
    </fieldset>
}
    
      </div>