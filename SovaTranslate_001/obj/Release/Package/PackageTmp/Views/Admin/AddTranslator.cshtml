@{
    ViewBag.Title = "AddTranslator";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }
<h2>AddTranslator</h2>
<div class="center">
    @Html.Label("Имя переводчика")
@Html.Label(Model.name)<br />
@Html.Label("Специализации")<br />
 @Html.Hidden("IdUser",Model.Id)
    </div>
