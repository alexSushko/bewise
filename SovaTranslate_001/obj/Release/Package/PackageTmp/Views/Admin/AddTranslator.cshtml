    </table>
    <div class="center">
     @Html.Label("Add Specialization")<br />
@Html.Label("Specialization name") <br />
     <input class="text" name="specializationTrAdd"/>
     
    <br /> @Html.Label("IsLanguage")<input type="checkbox" name="isL" value ="true" />
         
 <div class="control-group">
     @Html.Label("Complaxity")<br />
     <input type="number" name ="complexity" />

 </div>
    <div class="control-group">
     @Html.Label("Price")<br />
     <input type="number" name ="pricespec" />

 </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Register
            </button>
            @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn" })
        </div>
 </div>  
}